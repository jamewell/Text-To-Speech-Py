# EXAMPLE FILE - Copy to .env and replace with actual values
# DO NOT COMMIT ACTUAL .env FILES TO VERSION CONTROL

# Application Settings
PROJECT_NAME="TTS Web App Backend"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Server Configuration
HOST="127.0.0.1"
PORT=8000
API_V1_STR="/api/v1"

# CORS Configuration (comma-separated)
ALLOWED_HOSTS="http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000"

# PostgreSQL Database
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_USER="tts_user"
POSTGRES_PASSWORD="your_secure_password_here"
POSTGRES_DB="tts_db"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# MinIO Configuration
MINIO_HOST="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="tts-files"
MINIO_SECURE=false

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"